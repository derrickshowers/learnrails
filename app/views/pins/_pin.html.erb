<tr>
  <td><%= pin.description %></td>
  <td class="options">
  	<% if user_signed_in? && current_page?(root_path) %>
	  	<%= link_to raw('<i class="icon-thumbs-up"></i>'), { :controller => 'pins', :action => 'updateLikes', :id => pin.id, :like => true }, :method => :put, :remote => true, :class =>  (@likedPins.where(:pin_id => pin.id).length > 0) ? "iconSelected likeDislike pull-right" : "likeDislike pull-right" %>
	  	<%= link_to raw('<i class="icon-thumbs-down"></i>'), { :controller => 'pins', :action => 'updateLikes', :id => pin.id }, :method => :put, :remote => true, :class => (@likedPins.where(:pin_id => pin.id).length <= 0) ? "iconSelected likeDislike pull-right" : "likeDislike pull-right" %>
	  <% end %>
	  <% if !current_page?(root_path) %>
	  	<%= link_to raw("<i class='icon-search'></i>"), pin, :class => 'pull-right' %>
			  <% if current_user == pin.user %>
				  <%= link_to raw("<i class='icon-pencil'></i>"), edit_pin_path(pin), :class => 'pull-right' %>
				  <%= link_to raw("<i class='icon-trash'></i>"), pin, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'pull-right' %>
				  </td>
				<% else %>
				  </td>
				<% end %>
	  <% else %>
	  	</td>
	  <% end %>
</tr>
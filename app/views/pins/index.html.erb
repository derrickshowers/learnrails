		<% end %>
	</div>
	<div class="span6">
		<table id="pins" class="table table-striped">
		  <thead>
			  <tr>
			    <th>Others' Did-Not-Know-Thats</th>
			    <th class="pull-right">Rate It</th>
			  </tr>
		  </thead>
			<tbody>
				<%= render :partial => 'pinRating', :collection => @otherPins %>
			</tbody>
		</table>
	</div>
</div>
	
